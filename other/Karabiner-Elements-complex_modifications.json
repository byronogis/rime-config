{
  "description": "Change Caps Lock: Hyper(hlod) & switch_input(click)",
  "manipulators": [
      {
          "description": "caps_lock -> left_shift+left_option++left_control(Hyper)",
          "from": {
              "key_code": "caps_lock",
              "modifiers": { "optional": [] }
          },
          "to": [
              {
                  "key_code": "left_shift",
                  "modifiers": ["left_option", "left_control"]
              }
          ],
          "to_if_alone": [
              {
                  "key_code": "spacebar",
                  "modifiers": ["left_control"]
              }
          ],
          "type": "basic"
      }
  ]
}
